                        android:background="@drawable/drop"
                        android:prompt="@string/select2"
                        android:entries="@array/grade_array"

                        />
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_weight="1.0"
                        android:id="@+id/edTx4"
                        android:focusableInTouchMode="false"

                        android:ems="10"
                        android:maxLength="4"
                        android:inputType="textCapWords|number|numberSigned|numberDecimal|numberPassword|phone"
                        />




                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:gravity="center_horizontal"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <Spinner
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_weight="1.0"
                        android:id="@+id/spinner10"
                        android:background="@drawable/drop"
                        android:prompt="@string/select1"
                        android:entries="@array/credit_array"

                        />
                    <Spinner
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_weight="1.0"
                        android:id="@+id/spinner11"
                        android:background="@drawable/drop"
                        android:prompt="@string/select2"
                        android:entries="@array/grade_array"

                        />
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_weight="1.0"
                        android:id="@+id/edTx5"

                        android:focusableInTouchMode="false"
                        android:ems="10"
                        android:maxLength="4"
                        android:inputType="textCapWords|number|numberSigned|numberDecimal|numberPassword|phone"
                        />




                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:gravity="center_horizontal"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <Spinner
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_weight="1.0"
                        android:id="@+id/spinner12"
                        android:background="@drawable/drop"
                        android:prompt="@string/select1"
                        android:entries="@array/credit_array"

                        />
                    <Spinner
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_weight="1.0"
                        android:id="@+id/spinner13"
                        android:background="@drawable/drop"
                        android:prompt="@string/select2"
                        android:entries="@array/grade_array"

                        />
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_weight="1.0"
                        android:id="@+id/edTx6"
                        android:focusableInTouchMode="false"

                        android:ems="10"
                        android:maxLength="4"
                        android:inputType="textCapWords|number|numberSigned|numberDecimal|numberPassword|phone"
                        />




                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:gravity="center_horizontal"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <Spinner
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_weight="1.0"
                        android:id="@+id/spinner14"
                        android:background="@drawable/drop"
                        android:prompt="@string/select1"
                        android:entries="@array/credit_array"

                        />
                    <Spinner
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_weight="1.0"
                        android:id="@+id/spinner15"
                        android:background="@drawable/drop"
                        android:prompt="@string/select2"
                        android:entries="@array/grade_array"

                        />
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_weight="1.0"
                        android:id="@+id/edTx7"
                        android:focusableInTouchMode="false"

                        android:ems="10"
                        android:maxLength="4"
                        android:inputType="textCapWords|number|numberSigned|numberDecimal|numberPassword|phone"
                        />




                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:gravity="center_horizontal"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <Spinner
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_weight="1.0"
                        android:id="@+id/spinner16"
                        android:background="@drawable/drop"
                        android:prompt="@string/select1"
                        android:entries="@array/credit_array"

                        />
                    <Spinner
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_weight="1.0"
                        android:id="@+id/spinner17"
                        android:background="@drawable/drop"
                        android:prompt="@string/select2"
                        android:entries="@array/grade_array"

                        />
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_weight="1.0"
                        android:id="@+id/edTx8"
                        android:focusableInTouchMode="false"
                        android:ems="10"
                        android:maxLength="4"
                        android:inputType="textCapWords|number|numberSigned|numberDecimal|numberPassword|phone"
                        />




                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center"

                android:layout_weight="1"
                >

                <Button
                    android:id="@+id/calculate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Calculate"
                    android:textAllCaps="false"
                    android:textSize="18sp"
                    android:layout_weight="1"
                    />

                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="25sp"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:textColor="#FF4CEF93"
                    android:id="@+id/result"

                    />

                <Button
                    android:id="@+id/reset"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Reset"
                    android:layout_weight="1"
                    android:textAllCaps="false"
                    android:textSize="18sp"

                    />

            </LinearLayout>
            <com.google.android.gms.ads.AdView
                android:id="@+id/adView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                ads:adSize="BANNER"
                ads:adUnitId="@string/banner_ad_unit_id">
            </com.google.android.gms.ads.AdView>



        </LinearLayout>
    </ScrollView>
</LinearLayout>
